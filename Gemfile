source 'https://rubygems.org'

# Core Jekyll gem and theme dependencies
gem 'jekyll', '~> 4.2'
gem 'jekyll-theme-minimal'  # If you're using the minimal theme

# SEO and utility gems
gem 'jekyll-seo-tag'  # For SEO-friendly meta tags
gem 'jekyll-sitemap'   # For sitemap generation
gem 'jekyll-paginate-v2'  # For pagination support
gem 'jekyll-feed'     # For RSS feed generation

# Optional gems for enhanced functionality
gem 'jekyll-coffeescript'  # If you plan to use CoffeeScript
gem 'jekyll-commonmark-ghpages'  # For better Markdown parsing
gem 'jekyll-gist'         # For embedding GitHub Gists
gem 'jekyll-github-metadata'  # For better GitHub integration
gem 'jekyll-relative-links'  # For automatically managing relative links
gem 'jekyll-optional-front-matter'  # Optional front matter support
gem 'jekyll-readme-index'  # Auto-create index pages from README
gem 'jekyll-default-layout'  # Default layout support
gem 'jekyll-titles-from-headings'  # Auto-generate titles from headings

# Development and build dependencies
group :jekyll_plugins do
  gem 'jekyll-admin'  # Provides a web-based interface to manage your site
end

# Use this to specify your required Ruby version
ruby '2.7.0'
